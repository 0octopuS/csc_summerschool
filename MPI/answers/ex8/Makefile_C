COMP=cray

ifeq ($(COMP),cray)
CC=cc
CCFLAGS=-O2
LIBS=
endif

ifeq ($(COMP),gnu)
CC=mpicc
CCFLAGS=-O3 -Wall
LIBS=
endif


EXE1=vector_type
OBJS1=vector_type.c

all: $(EXE1)

.PHONY: $(EXE1)

$(EXE1): $(OBJS1) .ALWAYSEXEC
	$(CC) $(CCFLAGS) $(OBJS1) -o $@ $(LIBS)

%.o: %.c
	$(CC) $(CCFLAGS) -c $< -o $@

clean:
	-/bin/rm -f $(EXE1) a.out *.o 

.ALWAYSEXEC:
