COMP=cray

ifeq ($(COMP),cray)
CC=cc
FC=ftn 
MPIF90=ftn
CCFLAGS=-I/appl/opt/libpng/include/libpng16
FCFLAGS=-efmw
MPIF90FLAGS=-efmw
LIBS=-L/appl/opt/libpng/lib -lpng16 -lz
endif

ifeq ($(COMP),gnu)
CC=gcc
FC=gfortran
MPIF90=mpif90
CCFLAGS=-Wall -I/appl/opt/libpng/include/libpng16
FCFLAGS=-Wall
MPIF90FLAGS=-Wall
LIBS=-L/appl/opt/libpng/lib -lpng16 -lz
endif

ifeq ($(COMP),intel)
CC=icc
FC=ifort
MPIF90=ifort
CCFLAGS=-g -I/appl/opt/libpng/include/libpng16
FCFLAGS=-g
MPIF90FLAGS=-g
LIBS=-L/appl/opt/libpng/lib -lpng16 -lz
endif

EXE_SERIAL=heat_serial
EXE_MPI=heat_mpi
OBJS_SERIAL=heat_serial.o heat_serial_main.o
OBJS_MPI=heat_mpi.o heat_mpi_main.o
OBJS_PNG=pngwriter.o
OBJS_PNGF=pngwriter_mod.o 


default: $(EXE_MPI)
all: $(EXE_SERIAL) $(EXE_MPI)

pngwriter.o: pngwriter.c
pngwriter_mod.o: pngwriter_mod.F90
heat_serial.o: heat_serial.F90 pngwriter_mod.o pngwriter.o
heat_main.o: heat_main.F90 heat_serial.F90

$(OBJS_SERIAL): F_COMPILER := $(FC)
$(OBJS_PNGF): F_COMPILER := $(FC)
$(OBJS_MPI): F_COMPILER := $(MPIF90)

$(EXE_SERIAL): $(OBJS_SERIAL) $(OBJS_PNG) $(OBJS_PNGF)
	$(FC) $(FCFLAGS) $(OBJS_SERIAL) $(OBJS_PNG) $(OBJS_PNGF) -o $@ $(LIBS)

$(EXE_MPI): $(OBJS_PNG) $(OBJS_PNGF) $(OBJS_MPI) 
	$(MPIF90) $(FCFLAGS) $(OBJS_MPI) $(OBJS_PNG) $(OBJS_PNGF) -o $@ $(LIBS)

%.o: %.F90
	$(F_COMPILER) $(FCFLAGS) -c $< -o $@

%.o: %.c
	$(CC) $(CCFLAGS) -c $< -o $@

clean:
	-/bin/rm -f $(EXE_SERIAL) $(EXE_MPI) a.out *.o *.mod *.png *~
